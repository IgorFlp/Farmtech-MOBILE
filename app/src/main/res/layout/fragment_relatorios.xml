<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.relatorios.RelatoriosFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnExpandir"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:foreground="@mipmap/dropup_foreground" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buscaContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tipo de Relatório"
                        android:textColor="#242424"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/slcRelatorio"
                        android:layout_width="185dp"
                        android:layout_height="51dp"
                        android:layout_weight="1"
                        android:entries="@array/relatorios_spinner" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"
                        android:text="Data inicial"
                        android:textColor="#242424"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/txtDataInicial"
                        android:layout_width="153dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="00/00/0000"
                        android:inputType="date"
                        android:maxLength="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="206dp"
                        android:layout_height="wrap_content"
                        android:text="Data final"
                        android:textColor="#242424"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/txtDataFinal"
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="00/00/0000"
                        android:inputType="date"
                        android:maxLength="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnPesquisar"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:foreground="@mipmap/pesquisar_foreground"
                        android:foregroundTint="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/verde_forte"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Relatório"
                    android:textColor="#242424"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layoutRelatorio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/verde_fundo"
                    android:orientation="vertical">

                    <TableLayout
                        android:id="@+id/tabelaRelatorio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/colId"
                                android:layout_width="100sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:gravity="center_horizontal"
                                android:text="ID"
                                android:textColor="#242424"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView27"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:gravity="center_horizontal"
                                android:text="Nome"
                                android:textColor="#242424"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView29"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="Unidade"
                                android:textColor="#242424"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="Preço Un"
                                android:textColor="#242424"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textView31"
                                android:layout_height="wrap_content"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/textView32"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/textView33"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/textView34"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TextView" />
                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>